<h1>List of users</h1>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      User email
    </th>

    <td>
    </td>
  </tr>

  <% @list_of_users.each do |a_user| %>

    <tr>
      <td>
        <%= a_user.id %>
      </td>

      <td>
        <%= a_user.email %>
      </td>

      <td>
        <a href="/users/<%= a_user.email %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
